<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"

    android:layout_gravity="center"
    >


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animacionLottie"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/developer">

    </com.airbnb.lottie.LottieAnimationView>

    <TextView
        android:id="@+id/tv_eachPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/animacionLottie"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
android:layout_margin="20dp"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
        android:textColor="@color/black"
android:fontFamily="@font/muli_semibold"
        android:layout_margin="30dp"
        android:id="@+id/descriptionTexto"
        android:text="malesuada pellentesque elit eget gravida cum sociis natoque penatibus et magnis dis parturient montes nascetur"
        android:textSize="18sp" />
</LinearLayout>